#:kivy 1.0.9

<Elevator>:
    size: 5, 10
    canvas:
        Color:
            rgb:self.color
        Rectangle:
            pos:self.pos
            size:self.size

<JunctionKONE>:   
    elevator1: elevator_left
    elevator2: elevator_center
    elevator3: elevator_right

